<html>
<head>
    <link href='https://fonts.googleapis.com/css?family=Baloo 2' rel='stylesheet'>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!--Link of Font Awesome Icons  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <title>Admin Panel</title>
    <style>
            .background {
                background-image: url('/images/AdminRename.jpg');
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
                height: 100vh;
                width: 100%;
            }

            .size {
                height: 100px !important;
            }

            .tophead {
                width: 100%;
                height: 65px;
                background: #272634;
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .brandlogo {
                color: #fff;
                font-size: 1.5rem;
                padding-left: 50px;
            }

            .menulines {
                font-size: 30px;
                cursor: pointer;
                margin-right: 50px;
                color: #fff;
            }

            .sidenav {
                height: 100%;
                width: 0;
                position: fixed;
                top: 0;
                left: 0;
                z-index: 1;
                background: #272634;
                overflow-x: hidden;
                padding-top: 60px;
                transition: all 0.5s;
            }

                .sidenav a:hover {
                    color: rgba(255,255,255,0.7);
                }

            .closebtn {
                position: absolute;
                top: 0;
                margin-left: 150px;
                font-size: 35px !important;
            }

            .active {
                background-color: green;
                color: white;
            }

            .sidenav a, .dropdown-btn {
                padding: 30px 30px 0px 30px;
                text-decoration: none;
                font-size: 20px;
                color: #fff;
                display: block;
                border: none;
                background: none;
                width: 100%;
                text-align: left;
                cursor: pointer;
                outline: none;
            }

            .dropdown-container {
                display: none;
                padding-left: 13px;
            }

          
    </style>
</head>
<body>
    <header>
        <div class="tophead">
            <div class="brandlogo">
                Admin DashBoard
            </div>
            <div>
                <span class="menulines" onClick="openNav()">&#9776;</span>

            </div>
        </div>

    </header>
    <div class="sidenav" id="mySidenav">
        <a href="javascript:void(0)" class="closebtn" onClick="closeNav()">&times;</a>
        <a asp-action="AdminHomePage"><i class="fa fa-home"></i> Home</a>
        <a href="#"><i class="fa fa-address-card"></i> About</a>
        <button class="dropdown-btn">
            <i class="material-icons">&#xe56c;</i> Cafe
            <i class="fa fa-caret-down"></i>
        </button>
        <div class="dropdown-container">
            <a asp-action="PUCITCafe">PUCIT Cafe</a>
            <a asp-action="CategoryView">Pharmacy Cafe</a>
        </div>
        <a href="#"><i class="material-icons">&#xe561;</i> Pharmacy Cafe</a>-->
        <a href="#"><i class="fa fa-user"></i> Profile</a>
        <a href="#"><i class="fa fa-sign-out"></i> Logout</a>
    </div>
    <div>
        @RenderBody()
    </div>
    <script>
        const openNav = () => {
            document.getElementById("mySidenav").style.width = "260px";
        }
        const closeNav = () => {
            document.getElementById("mySidenav").style.width = "0";
        }
        var dropdown = document.getElementsByClassName("dropdown-btn");
        var i;
        for (i = 0; i < dropdown.length; i++) {
            dropdown[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var dropdownContent = this.nextElementSibling;
                if (dropdownContent.style.display === "block") {
                    dropdownContent.style.display = "none";
                } else {
                    dropdownContent.style.display = "block";
                }
            });
        }
    </script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</body>
</html>
