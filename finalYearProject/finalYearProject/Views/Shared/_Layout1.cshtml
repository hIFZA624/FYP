    <title>Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
        }


        .background {
            background-image: url('/images/AdminRename.jpg');
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            height: 100vh;
            width: 100%;
        }

        .size {
            height: 100px !important;
        }

        .tophead {
            width: 100%;
            height: 65px;
            background: #272634;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .brandlogo {
            color: #fff;
            font-size: 1.5rem;
            padding-left: 50px;
        }

        .menulines {
            font-size: 30px;
            cursor: pointer;
            margin-right: 50px;
            color: #fff;
        }

        .sidenav {
            height: 100%;
            width: 0;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1;
            background: #272634;
            overflow-x: hidden;
            padding-top: 60px;
            transition: all 0.5s;
        }

            .sidenav a:hover {
                color: rgba(255,255,255,0.7);
            }

        .closebtn {
            position: absolute;
            top: 0;
            margin-left: 150px;
            font-size: 35px !important;
        }

        .active {
            background-color: green;
            color: white;
        }

        .sidenav a, .dropdown-btn {
            padding: 30px 30px 0px 30px;
            text-decoration: none;
            font-size: 20px;
            color: #fff;
            display: block;
            border: none;
            background: none;
            width: 100%;
            text-align: left;
            cursor: pointer;
            outline: none;
        }

        .dropdown-container {
            display: none;
            padding-left: 13px;
        }
    </style>
</head>
<body>




    <header>
        <div class="tophead">
            <div class="brandlogo">
                Restaurant Admin
            </div>
            <div>
                <span class="menulines" onClick="openNav()">&#9776;</span>

            </div>
        </div>

    </header>
    <div class="sidenav" id="mySidenav">
        <a href="javascript:void(0)" class="closebtn" onClick="closeNav()">&times;</a>


      
        <a asp-action="ViewRestaurent">  <i class="fa fa-list-alt" aria-hidden="true"></i> View Restaurants</a>
        <a asp-action="AddRestaurent"><i class="fa fa-plus" aria-hidden="true"></i> Add Restaurant</a>

        <a asp-controller="Home" asp-action="Admin"><i class="fa fa-sign-out"></i> Exit</a>
    </div>
    <div>
        @RenderBody()
    </div>
    <script>
        const openNav = () => {
            document.getElementById("mySidenav").style.width = "260px";
        }
        const closeNav = () => {
            document.getElementById("mySidenav").style.width = "0";
        }
        var dropdown = document.getElementsByClassName("dropdown-btn");
        var i;
        for (i = 0; i < dropdown.length; i++) {
            dropdown[i].addEventListener("click", function () {
                this.classList.toggle("active");
                var dropdownContent = this.nextElementSibling;
                if (dropdownContent.style.display === "block") {
                    dropdownContent.style.display = "none";
                } else {
                    dropdownContent.style.display = "block";
                }
            });
        }
    </script>
</body>
</html>
