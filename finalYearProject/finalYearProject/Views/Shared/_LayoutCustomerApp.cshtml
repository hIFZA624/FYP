<!DOCKTYPE html>
    @{
        var uname = ViewBag.uname;
    }

    <html>
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js" integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0" crossorigin="anonymous"></script>

        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.0/css/all.css" integrity="sha384-lZN37f5QGtY3VHgisS14W3ExzMWZxybE1SJSEsQp9S+oqd12jhcu+A56Ebc1zFSJ" crossorigin="anonymous">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <style> 
      
            .background {
                background-image: url('/images/21.jpg');
                background-position: center;
                background-repeat: no-repeat;
                background-size: cover;
                height: 100vh;
                width:auto;
            }

            .most-liked {
                position: relative;
                margin-top: 25px;
            }

            .video-container {
                position: absolute;
                top: 0;
                left: 0;
                height: 100%;
                width: 100%;
                z-index: -1;
            }

            .bg-video {
                height: 100%;
                width: 100%;
                object-fit: cover;
            }
            /* Make the image fully responsive */
            .carousel-inner img {
                width: 100%;
                height: 89%;
            }

            .cafe-card {
                position: relative;
                box-shadow: 5px 15px 50px #634832;
                max-width: 420px;
                transition: all .8s;
                overflow: hidden;
                cursor: pointer;
            }

            .rotate {
                perspective: 100rem;
            }

            .back {
                position: absolute;
                top: -100%;
                background: #fff;
                height: 100%;
                width: 100%;
                opacity: 0;
                user-select: none;
                pointer-events: none;
                transform: rotateY(180deg);
                transition: top .8s opacity .4s;
            }

            .back-content {
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%,-50%);
            }

            .rotate:hover .cafe-card {
                transform: rotateY(180deg);
            }

            .rotate:hover .back {
                opacity: 1;
                top: 0;
                user-select: auto;
                pointer-events: auto;
            }

            .back-content .btn {
                color: #000;
            }

            * {
                margin: 0;
                padding: 0;
                font-family: 'Josefin Sans',sans-serif;
            }

            .content-4 .nav {
                justify-content: center;
                margin-bottom: 5%;
            }

            .content-4 .nav-tabs {
                margin: 2px;
                border: none;
                border-bottom: 0px;
                text-align: center;
                cursor: pointer;
                background: #000;
            }

            .content-4 .tab-item {
                text-decoration: none;
                color: #dbc1ac;
            }

                .content-4 .tab-item i {
                    display: block;
                    font-size: 45px;
                    padding: 6px 27px 0px 27px;
                }

                .content-4 .tab-item span {
                    display: inline-block;
                    padding-bottom: 16px;
                    width: 100%;
                    padding-left: 5px;
                    padding-right: 5px;
                }

                .content-4 .tab-item.active {
                    color: #967259;
                }

            .tab-content {
                margin-bottom: 5%;
                transition: all ease-in;
            }
        </style>
    </head>
    <body>
        <header>
            <!-- sTART OF hOME PAGE-->

            <nav class="navbar navbar-light bg-dark">
                <div class="container-fluid" style="padding:10px;">
                    <a style="padding-left:5px;" class="nav-link disabled" href="#" aria-disabled="true">Cafeteria And Restaurant Management System</a>
                    <form class="d-flex">
                        <ul class=" nav justify-content-end">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-route-uname="@uname" asp-action="Customer">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" asp-route-uname="@uname" asp-action="About" aria-current="page">About</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Offer Places</a>
                                <ul class="dropdown-menu" style="background-color:white; text-emphasis-color:white">
                                    <li><a class="dropdown-item" asp-route-uname="@uname" asp-controller="Cafe" asp-action="HomePage">Cafeteria</a></li>
                                    <li><a class="dropdown-item" asp-route-uname="@uname" asp-controller="Restaurent" asp-action="RestaurentHomePage">Restaurant</a></li>

                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">Others</a>
                                <ul class="dropdown-menu" style="background-color:white; text-emphasis-color:white">
                                    <li><a class="dropdown-item" asp-route-uname="@uname" asp-action="changepasswd">Change Password</a></li>
                                    <li><a class="dropdown-item" asp-route-uname="@uname" asp-action="userProfile">Profile</a></li>
                                    <li><a class="dropdown-item" asp-route-uname="@uname" asp-controller="RestaurentOwner" asp-action="OwnerLogin">Restaurant Owner?</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="CommentBox" asp-route-uname="@uname">Comment</a></li>
                                    <li><a class="dropdown-item" asp-controller="Home" asp-action="RestaurentContactUs" asp-route-uname="@uname">Contact Us</a></li>
                                </ul>
                            </li>
                           
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-controller="Home" asp-action="Logout">Logout</a>
                            </li>
                        </ul>
                    </form>
                </div>
            </nav>
            </header>
@RenderBody()


        <!--End of Contact Section
