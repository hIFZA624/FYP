@using finalYearProject.Models
@model EditRole
@{
     var uname = ViewBag.uname;
    Layout = "~/Views/Shared/_LayoutRole.cshtml";
}
<div class="container">
    <section class="mainpart">
        <div class="row">
            <div class="col-lg-10 m-auto d-block card p-3 decorate">
                <br />
                <h2 class=" text-center">Edit Role</h2>
                <hr />
                
                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group row">
                        <label asp-for="@Model.Id" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input disabled class="form-control" asp-for="@Model.Id" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.RoleName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="@Model.RoleName" />
                        </div>
                    </div>
                    <div class="form-group row">

                        <div class="col-sm-10">
                            <input type="submit" value="Update" class="btn btn-primary" />
                            <button asp-action="ViewRoles" asp-route-uname="@uname" class="btn btn-danger" >Cancel</button>
                        </div>
                    </div>
                    <div class="card mb-3">
                        <div class="card-header">
                            Users in This Role
                        </div>
                        <div class="card-body">
                            @foreach (var user in Model.users)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-action="EditUserInRole" asp-route-uname="@uname" asp-route-roleId="@Model.Id" class="btn btn-primary">Add or Remove Users</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
</div>
