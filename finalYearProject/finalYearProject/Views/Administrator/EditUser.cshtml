@using finalYearProject.Models
@model Users
@{
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<div class="container">
    <section class="mainpart">
        <div class="row">
            <div class="col-lg-10 m-auto d-block card p-3 decorate">
                <br />
                <h2 class=" text-center">Edit User</h2>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <form method="post">
                    <div class="form-group row">
                        <label asp-for="@Model.id" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input disabled class="form-control" asp-for="@Model.id" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.FirstName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="@Model.FirstName" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.LastName" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="@Model.LastName" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label asp-for="@Model.email" class="col-sm-2 col-form-label"></label>
                        <div class="col-sm-10">
                            <input class="form-control" asp-for="@Model.email" />
                        </div>
                    </div>
                    <div class="form-group row">

                        <div class="col-sm-10">
                            <input type="submit" value="Update" class="btn btn-primary" />
                            <a asp-action="ListUsers" value="Cancel" class="btn btn-danger">Cancel</a>
                        </div>
                    </div>
                    <div class="card mb-3">
                        <div class="card-header">
                            User Roles
                        </div>
                        <div class="card-body">
                            @foreach (var user in Model.Roles)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        </div>
                        <div class="card-footer">
                            <a asp-action="EditaUserRole" asp-route-roleId="@Model.id" class="btn btn-primary">Manage Roles</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>


</div>
