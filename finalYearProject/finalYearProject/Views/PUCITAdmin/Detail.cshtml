@using finalYearProject.ViewModel;
@model PUCITCafeCategoryViewModel
@{ 
  var uname= ViewBag.uname;
    Layout = "~/Views/Shared/_LayoutCafe.cshtml"; }
<style>
    .card {
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        margin: auto;
        text-align: center;
        font-family: arial;
    }

    .price {
        color: grey;
        font-size: 22px;
    }

    .card button {
        border: none;
        outline: 0;
        padding: 12px;
        color: white;
        background-color: #000;
        text-align: center;
        cursor: pointer;
        width: 100%;
        font-size: 18px;
    }

        .card button:hover {
            opacity: 0.7;
        }

    .height {
    }
</style>
<section>
    <div class="container-fluid">
        <h1 class="text-center text-capitalize pt-3">View Product Category</h1>
        <hr class="2-25 mx-auto">
        <div class="row mb-5" style="margin-top:20px;">
            <div class="col-lg-6 col-md-6 col-12">
                <img src="~/images/@Model.addCategory.PhotoPath" alt="Denim Jeans" style="width:100%;height:300px;object-fit:cover;">
            </div>
            <div class="col-lg-6 col-md-6 col-12">
                <h3>Name of Restaurant : @Model.addCategory.CategoryName</h3>
                <p class="price">Description : @Model.addCategory.Description</p>
            </div>
        </div>
    </div>
</section>